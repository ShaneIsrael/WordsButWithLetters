{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUndeclaredVariables": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"indentSize": 2,
			"lineWidth": 120,
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"arrowParentheses": "always"
		},
		"globals": ["umami"]
	}
}
